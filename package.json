{
  "name": "mcpcosmosdb",
  "version": "1.2.1",
  "description": "MCP CosmosDB - Azure CosmosDB MCP Server for database analysis and operations",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "mcp-cosmosdb": "./dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hendrickcastro/MCPCosmosDB.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "start": "ts-node src/server.ts",
    "build": "npm run clean && esbuild src/server.ts --bundle --platform=node --format=esm --outfile=dist/server.js --external:fsevents --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\"",
    "prepublishOnly": "npm run build",
    "test": "npm run build && jest",
    "test:mock": "npm run build && jest src/__tests__/mcp-tools.test.ts",
    "test:real": "npm run build && jest src/__tests__/real-db.test.ts --verbose",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cosmosdb",
    "azure-cosmosdb",
    "nosql",
    "document-database",
    "database",
    "database-analysis",
    "database-tools",
    "azure",
    "database-management",
    "database-administration",
    "analysis",
    "typescript",
    "nodejs",
    "cursor",
    "claude",
    "claude-desktop",
    "cursor-ide",
    "anthropic",
    "ai-tools",
    "llm-integration",
    "document-analysis",
    "container-analysis",
    "query-execution",
    "database-search",
    "schema-analysis",
    "data-exploration",
    "database-connector",
    "cli-tool",
    "npm-package"
  ],
  "author": "hendrickcastro",
  "license": "MIT",
  "dependencies": {
    "@azure/cosmos": "^4.4.1",
    "@azure/logger": "^1.0.4",
    "@modelcontextprotocol/sdk": "^1.13.1",
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "esbuild": "^0.25.10",
    "jest": "^30.0.2",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bundleDependencies": [
    "@modelcontextprotocol/sdk",
    "@azure/cosmos"
  ]
}
