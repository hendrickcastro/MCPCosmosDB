{
  "mcp-cosmosdb": {
    "command": "npx",
    "args": [
      "-y",
      "hendrickcastro/MCPCosmosDB"
    ],
    "disabled": false,
    "env": {
      "OCONNSTRING": "AccountEndpoint=https://your-cosmos-account.documents.azure.com:443/;AccountKey=your-cosmos-key-here;",
      "COSMOS_DATABASE_ID": "your-database-name"
    }
  }
} 